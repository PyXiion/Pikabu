<div id="sidebar-main">
<% if (authorized) { %>

  <div id="sidebar-account">
    <div class="user-avatar">
      <a href="/you">
        <img src="https://cs.pikabu.ru/images/def_avatar/def_avatar_72.png" alt="Ты" class="avatar" />
      </a>
    </div>
    <div class="user-info">
      <p class="user-name">Тут ничего нет</p>
    </div>
  </div>

<% } else { %>
  
  <!-- Форма авторизации -->
  <form id="auth-form">
    <input type="text" name="login">
    <input type="password" name="password">

    <input type="submit" value="Войти">
  </form>

<% } %>
</div>