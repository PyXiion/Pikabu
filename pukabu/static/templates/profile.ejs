<div class="profile">
  <div class="profile-background">
    <img src="<%= background %>" />
  </div>

  <div class="profile-data">

    <div class="profile-data-main">
      <img src="<%= avatar %>" class="avatar profile-data-main-avatar" />
      <p class="profile-data-main-username"><%= name %></p>
    </div>

    <div class="profile-data-additional">
      <p class="profile-data-line"><%= about %></p>

      <p class="profile-data-line">На сайте уже <%= registration_duration %></p>

      <p class="profile-data-line">
        Поставил 
        <span class="rating-pluses"><%= pluses_count %></span> <%= inflect(pluses_count, words.pluses) %> и 
        <span class="rating-minuses"><%= minuses_count %></span> <%= inflect(minuses_count, words.minuses) %>
      </p>
      
      <p class="profile-data-line"><%= getInflected(subscribers, words.subscribers) %></p>
      <p class="profile-data-line">Написал <%= getInflected(comments_count, words.comments) %></p>
      <p class="profile-data-line">Написал <%= getInflected(stories_count, words.stories) %></p>
    </div>

  </div>
</div>